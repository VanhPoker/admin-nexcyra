{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "dist/server/server.cjs",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/client/**",
          "kottster-app.json" 
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/dist/server/server.cjs"
    }
  ]
}